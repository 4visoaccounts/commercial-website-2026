<!DOCTYPE html>
<html lang="{{ currentSite.language }}" class="scroll-smooth">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        {# Seo #}
        {% hook "seo" %}

        {# Fonts #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Stack+Sans+Headline&family=Stack+Sans+Text:wght@300;400;700&display=swap" rel="stylesheet">

        {# Icons #}
        <link
            rel="stylesheet"
            type="text/css"
            href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.1/src/regular/style.css"
        />
        <link
            rel="stylesheet"
            type="text/css"
            href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.1/src/fill/style.css"
        />
        <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>

        {# Compiled CSS #}
        <link rel="stylesheet" href="/css/app.css">

        {# Alpine.js #}
        <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

        {# Alpine.js x-cloak style #}
        <style>
            [x-cloak] { display: none !important; }
        </style>

        {% block head %}{% endblock %}
    </head>
    <body class="antialiased">
        {# Header #}
        {% include "/header/_index.twig" %}

        {% block content %}{% endblock %}

        {# Footer #}
        {% include "/footer/_index.twig" %}

        <script>lucide.createIcons();</script>
    </body>
</html>
