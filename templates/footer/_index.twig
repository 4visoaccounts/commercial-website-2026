{# ========================================================================== #}
{# :: Variables #}
{# ========================================================================== #}
{% set footerLinks = footer.commonLinks.all() ?? [] %}
{% set subfooterLinks = subfooter.commonLinks.all() ?? [] %}

{# ========================================================================== #}
{# Footer Index #}
{# ========================================================================== #}
<footer style="background-color: #F4F6F5;">
    {# Footer #}
    <div class="container mx-auto px-4 lg:px-8 py-12 md:py-16">
        <div class="flex flex-col md:flex-row justify-between items-start gap-12">
            {# Left: Logo, address, email #}
            <div class="w-full md:w-1/3">
                <a href="/" class="no-underline inline-block mb-6">
                    {% include "/logos/logo-green.twig" with { customClass: 'h-12' } %}
                </a>

                {% if footer.commonDescription ?? null %}
                    <p class="text-grey text-[15px] mb-6">{{ footer.commonDescription|striptags|nl2br }}</p>
                {% endif %}

                {% if company.commonMail ?? null %}
                    <div class="flex items-center gap-3">
                        <i data-lucide="mail" class="w-5 h-5 text-primary-pine"></i>
                        <a href="mailto:{{ company.commonMail }}" class="text-primary-pine font-semibold text-[15px]">{{ company.commonMail }}</a>
                    </div>
                {% endif %}
            </div>

            {# Right: Navigation links #}
            {% if footerLinks|length %}
                <div class="flex flex-wrap items-center gap-6 md:gap-8">
                    {% for item in footerLinks %}
                        {% set link = item.commonLink ?? null %}
                        {% if link %}
                            {% if loop.last %}
                                {# Last link as LinkedIn icon #}
                                <a href="{{ link.url ?? '#' }}" target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-primary-pine flex items-center justify-center no-underline hover:bg-primary transition-colors">
                                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                                </a>
                            {% else %}
                                <a href="{{ link.url ?? '#' }}" class="text-dark no-underline text-[15px] font-medium hover:text-primary-pine transition-colors">
                                    {{ link.text }}
                                </a>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    {# Subfooter #}
    <div class="container mx-auto px-4 lg:px-8">
        <div class="border-t border-card-border py-6">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                {# Left: Copyright #}
                {% if subfooter.commonTitle ?? null %}
                    <p class="text-grey text-[14px]">{{ subfooter.commonTitle|striptags }}</p>
                {% endif %}

                {# Right: Links #}
                {% if subfooterLinks|length %}
                    <div class="flex flex-wrap items-center gap-1">
                        {% for item in subfooterLinks %}
                            {% set link = item.commonLink ?? null %}
                            {% if link %}
                                {% if not loop.first %}
                                    <span class="text-grey mx-1">|</span>
                                {% endif %}
                                <a href="{{ link.url ?? '#' }}" class="text-dark no-underline text-[14px] hover:text-primary-pine transition-colors">{{ link.text }}</a>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</footer>
