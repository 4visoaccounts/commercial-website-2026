{# ========================================================================== #}
{# :: Variables #}
{# ========================================================================== #}
{% set id = data.commonId ?? "" %}
{% set title = data.commonTitle ?? "" %}
{% set description = data.commonDescription ?? "" %}
{% set blocks = data.commonBlocks.all() ?? [] %}

{# ========================================================================== #}
{# :: Component #}
{# ========================================================================== #}
<section class="container mx-auto px-4 lg:px-8 py-16 md:py-32" id="{{id}}">
    {% if title %}
        <h2 class="text-center mb-4">{{ title|striptags|raw }}</h2>
    {% endif %}

    {% if description %}
        <p class="text-center max-w-3xl mx-auto mb-16">{{ description|striptags }}</p>
    {% endif %}

    {% if blocks|length %}
        <div class="overflow-x-auto">
            <div class="relative min-w-[800px] px-4">
                {# Horizontal line #}
                <div class="absolute left-0 right-0 top-1/2 -translate-y-1/2 flex items-center">
                    <div class="flex-1 h-[2px] bg-primary/30"></div>
                    <svg class="w-3 h-3 text-primary/30 -ml-px" viewBox="0 0 12 12" fill="currentColor"><polygon points="0,0 12,6 0,12"/></svg>
                </div>

                {# Timeline items #}
                <div class="relative flex">
                    {% for block in blocks %}
                        {% set isOdd = loop.index is odd %}
                        {% set milestone = block.commonTitle ?? "" %}
                        {% set date = block.commonDescription ?? "" %}

                        <div class="flex-1 flex flex-col items-center text-center">
                            {# Above area #}
                            <div class="h-28 flex flex-col items-center justify-end pb-2">
                                {% if not isOdd %}
                                    {# Even: pill above #}
                                    <span class="inline-block bg-schema-bg border border-card-border rounded-full px-5 py-2 text-sm text-dark whitespace-nowrap mb-2">{{ date }}</span>
                                    <div class="w-px h-6 border-l border-dashed border-primary/50"></div>
                                {% else %}
                                    {# Odd: date above #}
                                    <span class="text-[13px] text-grey whitespace-nowrap">{{ milestone }}</span>
                                {% endif %}
                            </div>

                            {# Dot #}
                            <div class="w-3 h-3 rounded-full bg-primary relative z-10 shrink-0"></div>

                            {# Below area #}
                            <div class="h-28 flex flex-col items-center justify-start pt-2">
                                {% if isOdd %}
                                    {# Odd: pill below #}
                                    <div class="w-px h-6 border-l border-dashed border-primary/50"></div>
                                    <span class="inline-block bg-schema-bg border border border-card-border rounded-full px-5 py-2 text-sm text-dark whitespace-nowrap mt-2">{{ date }}</span>
                                {% else %}
                                    {# Even: date below #}
                                    <span class="text-[13px] text-grey whitespace-nowrap">{{ milestone }}</span>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</section>
