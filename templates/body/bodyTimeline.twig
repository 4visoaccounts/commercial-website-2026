{# ========================================================================== #}
{# :: Variables #}
{# ========================================================================== #}
{% set id = data.commonId ?? "" %}
{% set title = data.commonTitle ?? "" %}
{% set description = data.commonDescription ?? "" %}
{% set blocks = data.commonBlocks.all() ?? [] %}

{# ========================================================================== #}
{# :: Component #}
{# ========================================================================== #}
<section x-data="{ visible: false }" x-intersect.once.margin.0px.0px.-100px.0px="visible = true" class="relative container mx-auto px-4 lg:px-8 py-16 md:py-32" id="{{id}}">
    {# Background vertical lines #}
    <div class="absolute inset-y-0 left-[10%] w-4/5 flex flex-row justify-between pointer-events-none -z-10">
        {% for i in 1..6 %}
            <div class="h-full w-px bg-schema-line"></div>
        {% endfor %}
    </div>

    {% if title %}
        <h2 class="text-center mb-4"
            style="opacity: 0; transform: translateY(40px);"
            :style="`opacity: ${visible ? 1 : 0}; transform: translateY(${visible ? 0 : 40}px); transition: opacity 0.5s ease-out, transform 0.5s ease-out;`">{{ title|striptags|raw }}</h2>
    {% endif %}

    {% if description %}
        <p class="text-center max-w-3xl mx-auto mb-16"
            style="opacity: 0; transform: translateY(40px);"
            :style="`opacity: ${visible ? 1 : 0}; transform: translateY(${visible ? 0 : 40}px); transition: opacity 0.5s 100ms ease-out, transform 0.5s 100ms ease-out;`">{{ description|striptags }}</p>
    {% endif %}

    {% if blocks|length %}
        <div style="opacity: 0; transform: translateY(40px);"
            :style="`opacity: ${visible ? 1 : 0}; transform: translateY(${visible ? 0 : 40}px); transition: opacity 0.5s 200ms ease-out, transform 0.5s 200ms ease-out;`">

            {# Mobile: vertical timeline #}
            <div class="md:hidden relative pl-8">
                {# Vertical line #}
                <div class="absolute left-[11px] top-0 bottom-0 w-[2px] bg-primary/30"></div>

                {% for block in blocks %}
                    {% set milestone = block.commonTitle ?? "" %}
                    {% set date = block.commonDescription ?? "" %}
                    <div class="relative flex items-start gap-4 pb-10 last:pb-0">
                        {# Dot #}
                        <div class="absolute -left-8 mt-1 w-3 h-3 rounded-full bg-primary shrink-0 z-10"></div>
                        {# Content #}
                        <div>
                            <span class="inline-block bg-schema-bg border border-card-border rounded-full px-4 py-1.5 text-sm text-dark mb-2">{{ date }}</span>
                            <p class="text-[14px] text-grey leading-snug">{{ milestone }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# Desktop: horizontal timeline #}
            <div class="hidden md:block overflow-x-auto">
                <div class="relative min-w-[800px] px-4">
                    {# Horizontal line #}
                    <div class="absolute left-0 right-0 top-1/2 -translate-y-1/2 flex items-center">
                        <div class="flex-1 h-[2px] bg-primary/30"></div>
                        <svg class="w-3 h-3 text-primary/30 -ml-px" viewBox="0 0 12 12" fill="currentColor"><polygon points="0,0 12,6 0,12"/></svg>
                    </div>

                    {# Timeline items #}
                    <div class="relative flex">
                        {% for block in blocks %}
                            {% set isOdd = loop.index is odd %}
                            {% set milestone = block.commonTitle ?? "" %}
                            {% set date = block.commonDescription ?? "" %}

                            <div class="flex-1 flex flex-col items-center text-center">
                                {# Above area #}
                                <div class="h-28 flex flex-col items-center justify-end pb-2">
                                    {% if not isOdd %}
                                        <span class="inline-block bg-schema-bg border border-card-border rounded-full px-5 py-2 text-sm text-dark whitespace-nowrap mb-2">{{ date }}</span>
                                        <div class="w-px h-6 border-l border-dashed border-primary/50"></div>
                                    {% else %}
                                        <span class="text-[13px] text-grey whitespace-nowrap">{{ milestone }}</span>
                                    {% endif %}
                                </div>

                                {# Dot #}
                                <div class="w-3 h-3 rounded-full bg-primary relative z-10 shrink-0"></div>

                                {# Below area #}
                                <div class="h-28 flex flex-col items-center justify-start pt-2">
                                    {% if isOdd %}
                                        <div class="w-px h-6 border-l border-dashed border-primary/50"></div>
                                        <span class="inline-block bg-schema-bg border border-card-border rounded-full px-5 py-2 text-sm text-dark whitespace-nowrap mt-2">{{ date }}</span>
                                    {% else %}
                                        <span class="text-[13px] text-grey whitespace-nowrap">{{ milestone }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</section>
