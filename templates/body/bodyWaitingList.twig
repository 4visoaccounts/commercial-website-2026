{# ========================================================================== #}
{# :: Variables #}
{# ========================================================================== #}
{% set title = data.commonTitle ?? "" %}
{% set description = data.commonDescription ?? "" %}

{# ========================================================================== #}
{# :: Component #}
{# ========================================================================== #}
<section class="container mx-auto px-4 lg:px-8 py-16 md:py-32">
    <div class="bg-primary rounded p-8 md:p-16 relative overflow-hidden">
        {# Logo pattern #}
        <div class="absolute inset-0 overflow-hidden pointer-events-none opacity-20 flex flex-wrap content-start gap-8 p-6">
            {% for i in 1..500 %}
                {% include "/shapes/logo.twig" with { customClass: 'w-2 h-2 shrink-0' } %}
            {% endfor %}
        </div>

        <div class="relative flex flex-col md:flex-row gap-12 md:gap-20">
            {# Left side: title + description #}
            <div class="w-full md:w-1/2">
                {% if title %}
                    <h2 class="text-white mt-12">{{ title|striptags|raw }}</h2>
                {% endif %}

                {% if description %}
                    <p class="text-white/80">{{ description|striptags }}</p>
                {% endif %}
            </div>

            {# Right side: form #}
            <div class="w-full md:w-1/2">
                <form method="post" accept-charset="UTF-8" class="space-y-6">
                    {{ csrfInput() }}
                    {{ actionInput('contact-form/send') }}
                    {{ redirectInput(craft.app.request.url ~ '?success=1') }}

                    {# Honeypot #}
                    <div style="position: absolute; left: -9999px;">
                        <label for="beesknees-wl">Leave this empty</label>
                        <input type="text" name="beesknees" id="beesknees-wl" value="">
                    </div>

                    <input type="hidden" name="subject" value="New waiting list signup">

                    <div>
                        <label for="wl-firstName" class="block text-white text-[16px] mb-2 no-underline">First Name</label>
                        <input type="text" name="message[firstName]" id="wl-firstName" class="w-full px-4 py-3 rounded bg-white border border-white text-dark text-[16px] focus:outline-none focus:border-primary-pine">
                    </div>

                    <div>
                        <label for="wl-fromEmail" class="block text-white text-[16px] mb-2 no-underline">E-mail address<span class="text-primary-lightest-green">*</span></label>
                        <input type="email" name="fromEmail" id="wl-fromEmail" required class="w-full px-4 py-3 rounded bg-white border border-white text-dark text-[16px] focus:outline-none focus:border-primary-pine">
                    </div>

                    <div>
                        <label for="wl-company" class="block text-white text-[16px] mb-2 no-underline">Company</label>
                        <input type="text" name="message[company]" id="wl-company" class="w-full px-4 py-3 rounded bg-white border border-white text-dark text-[16px] focus:outline-none focus:border-primary-pine">
                    </div>

                    <div>
                        <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 rounded font-semibold text-[16px] no-underline transition bg-primary-pine text-white hover:bg-dark cursor-pointer">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
